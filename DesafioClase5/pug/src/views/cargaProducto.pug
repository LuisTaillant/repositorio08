          div.input-group.m-3
            span.input-group-text Precio: 
            input(type="number", placeholder="Precio", name="price").form-control
          div.input-group.m-3
            span.input-group-text URL Imagen 
            input(type="text", placeholder="URL", name="thumbnail", id="url").form-control
